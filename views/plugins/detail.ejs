<%- include('../partials/header') %>

<!-- Page Header -->
<section class="bg-primary text-white py-4 mb-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col">
        <h1 class="fw-bold mb-0"><%= plugin.name %></h1>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/" class="text-white text-decoration-none">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="/plugins" class="text-white text-decoration-none">Eklentiler</a></li>
            <li class="breadcrumb-item active text-white-50" aria-current="page"><%= plugin.name %></li>
          </ol>
        </nav>
      </div>
    </div>
  </div>
</section>

<!-- Plugin Detail -->
<section class="mb-5">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <!-- Plugin Header -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="row g-0">
            <div class="col-md-4">
              <div class="placeholder-image plugin h-100 rounded-start" data-content="<%= plugin.name %>">
                <i class="fas fa-puzzle-piece fa-2x"></i>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h2 class="card-title fw-bold mb-0"><%= plugin.name %></h2>
                </div>
                
                <p class="card-text text-muted mb-3"><%= plugin.description %></p>
                
                <div class="mb-3">
                  <h6 class="text-primary mb-2">Komutlar:</h6>
                  <ul class="list-group list-group-flush">
                    <% Object.entries(plugin.komutlar).forEach(([key, value]) => { %>
                      <li class="list-group-item bg-transparent px-0 py-1">
                        <strong><%= key %>:</strong> <code><%= value %></code>
                      </li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <!-- Download Card -->
        <div class="card border-0 shadow-sm mb-4 sticky-lg-top" style="top: 2rem; z-index: 1000;">
          <div class="card-body p-4">
            <h3 class="fw-bold mb-3">İndirme Bağlantısı</h3>
            
            <div class="d-grid mb-3">
              <a href="https://discord.gg/lunadevs" target="_blank" class="btn btn-success btn-lg">
                <i class="fas fa-download me-2"></i> İndir
              </a>
            </div>
            
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i> Eklenti ile ilgili destek için Discord sunucumuza katılın.
            </div>
            
            <ul class="list-unstyled mb-0">
              <li class="d-flex justify-content-between align-items-center mb-2 text-muted">
                <span><i class="fas fa-shield-alt me-2"></i> Virüssüz Garanti</span>
                <i class="fas fa-check-circle text-success"></i>
              </li>
              <li class="d-flex justify-content-between align-items-center mb-2 text-muted">
                <span><i class="fas fa-sync me-2"></i> Ücretsiz Güncellemeler</span>
                <i class="fas fa-check-circle text-success"></i>
              </li>
              <li class="d-flex justify-content-between align-items-center mb-2 text-muted">
                <span><i class="fas fa-headset me-2"></i> Discord Desteği</span>
                <i class="fas fa-check-circle text-success"></i>
              </li>
              <li class="d-flex justify-content-between align-items-center text-muted">
                <span><i class="fas fa-file-alt me-2"></i> Dokümantasyon</span>
                <i class="fas fa-check-circle text-success"></i>
              </li>
            </ul>
          </div>
        </div>
        
        <!-- Discord Join -->
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Discord Sunucumuza Katılın</h5>
          </div>
          <div class="card-body">
            <p class="mb-3">Daha fazla eklenti ve destek için Discord sunucumuza katılın!</p>
            <div class="d-grid">
              <a href="https://discord.gg/lunadevs" target="_blank" class="btn btn-outline-primary">
                <i class="fab fa-discord me-2"></i> Discord'a Katıl
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %> 