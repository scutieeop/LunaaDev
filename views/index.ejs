  </div>
</section>

<!-- Featured Plugins -->
<section class="py-6">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
      <div class="animate-on-scroll" data-animation="fade-right">
        <span class="badge bg-primary px-3 py-2 mb-3">EKLENTİLER</span>
        <h2 class="fw-bold display-5 mb-0">Öne Çıkan Eklentiler</h2>
      </div>
      <a href="/plugins" class="btn btn-outline-primary animate-on-scroll" data-animation="fade-left">
        <i class="fas fa-th-list me-2"></i>Tüm Eklentileri Gör
      </a>
    </div>
    
    <div class="row g-4">
      <% plugins.forEach((plugin, index) => { %>
        <div class="col-lg-3 col-md-6 animate-on-scroll" data-animation="fade-up" data-delay="<%= index * 100 %>">
          <div class="plugin-card h-100 hover-lift">
            <div class="placeholder-image plugin rounded-0 rounded-top" data-content="<%= plugin.name %>">
              <i class="fas fa-puzzle-piece"></i>
            </div>
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title fw-bold mb-0"><%= plugin.name %></h5>
                <% if (Object.keys(plugin.komutlar).length > 0) { %>
                  <span class="badge bg-light text-dark shadow-sm">
                    <i class="fas fa-terminal me-1"></i><%= Object.keys(plugin.komutlar).length %>
                  </span>
                <% } %>
              </div>
              <p class="card-text text-muted small mb-3"><%= plugin.description %></p>
              
              <% if (Object.keys(plugin.komutlar).length > 0) { %>
                <div class="plugin-command my-3">
                  <code><span class="command-prefix">/</span><span class="command-name"><%= plugin.name.toLowerCase() %></span> <span class="command-arg">help</span></code>
                </div>
              <% } %>
              
              <div class="d-grid mt-auto">
                <a href="/plugins/<%= plugin.name %>" class="btn btn-sm btn-outline-primary">
                  <i class="fas fa-eye me-1"></i> Detaylar
                </a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

