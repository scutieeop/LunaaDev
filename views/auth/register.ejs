<%- include('../partials/header') %>

<section class="my-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-lg">
          <div class="card-header bg-primary text-white text-center py-3">
            <h4 class="mb-0 fw-bold">Yeni Hesap Oluştur</h4>
          </div>
          <div class="card-body p-4 p-md-5">
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
              </div>
            <% } %>
            
            <form action="/auth/register" method="POST">
              <div class="row">
                <div class="col-md-6 mb-4">
                  <label for="username" class="form-label">Kullanıcı Adı</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input type="text" class="form-control" id="username" name="username" placeholder="Kullanıcı adınız" required>
                  </div>
                  <small class="text-muted">Kullanıcı adınız herkese açık olarak görünecektir.</small>
                </div>
                
                <div class="col-md-6 mb-4">
                  <label for="email" class="form-label">Email</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email adresiniz" required>
                  </div>
                </div>
              </div>
              
              <div class="row">
                <div class="col-md-6 mb-4">
                  <label for="password" class="form-label">Şifre</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Şifreniz" required>
                  </div>
                  <small class="text-muted">En az 8 karakter, bir büyük harf ve bir rakam içermelidir.</small>
                </div>
                
                <div class="col-md-6 mb-4">
                  <label for="confirmPassword" class="form-label">Şifre Tekrar</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Şifrenizi tekrar girin" required>
                  </div>
                </div>
              </div>
              
              <div class="mb-4 form-check">
                <input type="checkbox" class="form-check-input" id="acceptTerms" name="acceptTerms" required>
                <label class="form-check-label" for="acceptTerms">
                  <a href="/terms" class="text-decoration-none" target="_blank">Kullanım Şartları</a>'nı ve 
                  <a href="/privacy" class="text-decoration-none" target="_blank">Gizlilik Politikası</a>'nı okudum ve kabul ediyorum.
                </label>
              </div>
              
              <div class="mb-4 form-check">
                <input type="checkbox" class="form-check-input" id="newsletter" name="newsletter">
                <label class="form-check-label" for="newsletter">
                  Yeni eklentiler, güncellemeler ve indirimler hakkında email almak istiyorum.
                </label>
              </div>
              
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">Kaydol</button>
              </div>
              
              <hr class="my-4">
              
              <div class="text-center">
                <p class="mb-2">Sosyal medya ile kaydol</p>
                <div class="d-flex justify-content-center gap-2">
                  <button type="button" class="btn btn-outline-primary">
                    <i class="fab fa-google"></i>
                  </button>
                  <button type="button" class="btn btn-outline-primary">
                    <i class="fab fa-facebook-f"></i>
                  </button>
                  <button type="button" class="btn btn-outline-primary">
                    <i class="fab fa-discord"></i>
                  </button>
                </div>
                
                <p class="mt-4 mb-0">Zaten hesabınız var mı? <a href="/auth/login" class="text-decoration-none">Giriş Yapın</a></p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %> 